<h2>Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<br />
  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">@</div>
  <%= f.email_field :email, autofocus: true, :class => "input-lg form-control", "placeholder" => "Bryan@email.com"  %>
    	</div>
  </div>

  <br />
  <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">P </div>
    <%= f.password_field :password, autocomplete: "off", :class => "input-lg form-control", "placeholder" => "password"  %>
      	</div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <div class="input-group-addon">P </div>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "input-lg form-control", "placeholder" => "password confirmation" %>
          	</div>
  </div>

  <div><%= f.submit "Sign up", :class=> "btn btn-default btn-lg pull-right"  %></div>
<% end %>
<br />
<br />
<center>
<%= render "devise/shared/links" %></center>
