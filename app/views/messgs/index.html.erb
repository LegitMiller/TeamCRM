<h1>Listing messgs</h1>

<table>
  <thead>
    <tr>
      <th>Intro</th>
      <th>Message</th>
      <th>Closing</th>
      <th>Progression</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messgs.each do |messg| %>
      <tr>
        <td><%= messg.intro %></td>
        <td><%= messg.message %></td>
        <td><%= messg.closing %></td>
        <td><%= messg.progression_id %></td>
        <td><%= link_to 'Show', messg %></td>
        <td><%= link_to 'Edit', edit_messg_path(messg) %></td>
        <td><%= link_to 'Destroy', messg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Messg', new_messg_path %>

<br>

<br>

<br>

<br>

<br>

<% if current_user.profile.title == "admin" || current_user.profile.title == "master" %>
  <h2>Backup</h2>
  <br />
  <div class="row">
    <div class="col-xs-4 col-sm-4">
    <h3>Export Messgs</h3>
      <%= link_to "To CSV File", messgs_path(format: "csv"), :class => 'btn btn-default btn' %>

    </div>
    <div class="col-xs-4 col-sm-4">
      <h3>Import Messgs</h3>
      <%= form_tag import_messgs_path, multipart: true do %>
        <%= file_field_tag :file, :class => 'btn btn-default btn' %><br />
        <%= submit_tag "Import", :class => 'btn btn-default btn' %>
      <% end %>
    </div>
  </div>
<% end %>
