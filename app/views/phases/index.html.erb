<h1>Phases </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phases.order(:phase_id).reverse.each do |phase| %>
      <tr>
        <td><h3><%= phase.name %></h3></td>
        <td><%= phase.phase_id %></td>
        <td><%= link_to 'Show', phase %></td>
        <td><%= link_to 'Edit', edit_phase_path(phase) %></td>
        <td><%= link_to 'Destroy', phase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
       <tr>
        <td>
          <table class="table table-hover">
            <tbody>
              <% @progressions.each do |progression| %>
                <% if progression.phase == phase %>
                  <tr> 
                    <td></td>
                    <td><%= progression.name + " textbox" %></td>
                    <td><%= "Phase Dropdown" %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Phase', new_phase_path %>


