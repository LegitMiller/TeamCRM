<div class="row">
  <%= form_for(@profile) do |f| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
    
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.text_field :firstname, :class => "input-lg form-control", "placeholder" => "first name" %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.text_field :lastname, :class => "input-lg form-control", "placeholder" => "last name" %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.text_field :phone, :class => "input-lg form-control", "placeholder" => "phone number" %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.text_field :email, :class => "input-lg form-control", "placeholder" => "email", "required" => "true" %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.label :title %>&nbsp
          <%= f.select :title, options_for_select(@listoftitles, @profile.title), {:selected => params[:title]}, { :class => "btn btn-default btn-lg dropdown-toggle"}  %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.text_field :bio, :class => "input-lg form-control", "placeholder" => "about me" %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="input-group">
          <br>
          <%= f.label "Availability" %>&nbsp
          <%= f.select :status, options_for_select([["Free", "free"], ["Busy", "busy"]], @profile.status), {:selected => params[:status]}, { :class => "btn btn-default btn-lg dropdown-toggle"} %>
        </div>
      </div>
      <div class="col-xs-6 col-sm-3">
        <div class="actions">
          <center><br />
            <%= f.submit "Submit", :class=> "btn btn-info btn-lg" %>
          </center>
        </div>
      </div>
    </div>
  <% end %>      
</div>
      